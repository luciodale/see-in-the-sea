---
import AboutPage from '@/components/pages/AboutPage.astro';
import { getLangFromUrl } from '@/i18n';

const currentLang = getLangFromUrl(Astro.url);
const alternates = [
  { hrefLang: 'it', href: new URL('/it/about', Astro.url).toString() },
  { hrefLang: 'x-default', href: Astro.url.href },
];
---

<AboutPage lang={currentLang} alternates={alternates} />
