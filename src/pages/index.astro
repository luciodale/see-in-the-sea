---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="max-w-4xl mx-auto px-6 py-12">
			<div class="text-center space-y-8">
				<!-- Hero Section -->
				<div class="space-y-4">
					<h1 class="text-5xl font-bold text-gray-900">
						Underwater Photography Contest 2025
					</h1>
					<p class="text-xl text-gray-600 max-w-2xl mx-auto">
						Dive into creativity and showcase your best underwater photography across three stunning categories.
					</p>
				</div>

				<!-- CTA Button -->
				<div class="pt-8">
					<a 
						href="/user" 
						class="inline-flex items-center px-8 py-4 text-lg font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl"
					>
						<svg class="mr-3 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
						</svg>
						Enter Contest
					</a>
				</div>

				<!-- Categories Preview -->
				<div class="pt-12 space-y-6">
					<h2 class="text-2xl font-semibold text-gray-900">Contest Categories</h2>
					<div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-3xl mx-auto">
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h3 class="font-semibold text-lg text-gray-900 mb-2">Wide Angle</h3>
							<p class="text-sm text-gray-600">Capture the vastness and beauty of underwater landscapes and seascapes.</p>
						</div>
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h3 class="font-semibold text-lg text-gray-900 mb-2">Macro</h3>
							<p class="text-sm text-gray-600">Focus on the intricate details of marine life and underwater textures.</p>
						</div>
						<div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
							<h3 class="font-semibold text-lg text-gray-900 mb-2">Black and White</h3>
							<p class="text-sm text-gray-600">Showcase the artistic contrast and mood of monochrome underwater scenes.</p>
						</div>
					</div>
				</div>

				<!-- Contest Info -->
				<div class="pt-8 text-sm text-gray-500 space-y-2">
					<p>âœ¨ Up to 2 submissions per category</p>
					<p>ðŸ”„ Replace images anytime before the deadline</p>
					<p>ðŸš€ Images automatically optimized for web display</p>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
