---
import { Picture } from 'astro:assets';

type Props = {
  title: string;
  description: string;
  image: { link: string; objectFit?: boolean };

  isRight?: boolean;
  buttonCTA?: {
    text: string;
    link: string;
  };
};

const { title, description, image, isRight = false, buttonCTA } = Astro.props;

const objectFit = image.objectFit ?? false;
---

<div class="flex items-center justify-center">
  <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-12 items-center">
    <!-- Text Content -->
    <div class={`space-y-8 ${isRight ? 'lg:order-2' : 'lg:order-1'}`}>
      <div class="space-y-6">
        <h2
          class="text-4xl sm:text-5xl font-extralight text-gray-50 uppercase tracking-wider leading-tight"
        >
          {title}
        </h2>
        <p class="text-xl font-light text-gray-300 leading-relaxed max-w-2xl">
          {description}
        </p>
      </div>

      {
        buttonCTA && (
          <div class="pt-4">
            <a
              href={buttonCTA.link}
              class="inline-flex items-center px-6 py-3 bg-blue-600/60 border border-blue-500/70 text-blue-100 rounded-lg transition-all duration-300 text-base font-light tracking-wide uppercase"
            >
              {buttonCTA.text}
            </a>
          </div>
        )
      }
    </div>

    <!-- Image -->
    <div class={`${isRight ? 'lg:order-1' : 'lg:order-2'}`}>
      <div class="aspect-square overflow-hidden bg-slate-800/60">
        <Picture
          src={image.link}
          alt={title}
          class={`w-full h-full ${objectFit ? 'object-cover' : ''}`}
          width={1000}
          height={1000}
        />
      </div>
    </div>
  </div>
</div>
