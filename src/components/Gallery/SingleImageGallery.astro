---
type Props = {
  imageUrl: string;
  title: string;
  displayName: string;
};

const { imageUrl, title, displayName }: Props = Astro.props;
---

<div class="bg-gray-800 overflow-hidden shadow-lg">
  <img class="w-full object-cover" src={imageUrl} alt={title} loading="lazy" />
  <div class="px-6 py-4 flex flex-col items-center justify-center">
    <h3 class="text-2xl text-gray-100 mb-2">{title}</h3>
    <p class="text-gray-400 mb-2 font-extrabold">{displayName}</p>
  </div>
</div>
